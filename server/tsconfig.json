{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "noLib": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": [
      "spotify-api",
      "express"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}